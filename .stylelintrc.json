{
    "extends": ["stylelint-config-recommended-scss"],
    "plugins": ["stylelint-order"],
    "rules": {
       "selector-class-pattern": "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
       "order/properties-order": [
         {
           "groupName": "Positioning",
           "properties": [
             "position",
             "top",
             "right",
             "bottom",
             "left",
             "z-index"
           ]
         },
         {
           "groupName": "Box Model",
           "properties": [
             "display",
             "flex",
             "flex-direction",
             "flex-wrap",
             "justify-content",
             "align-items",
             "width",
             "height",
             "margin",
             "padding",
             "border",
             "box-sizing"
           ]
         },
         {
           "groupName": "Typography",
           "properties": [
             "font",
             "font-size",
             "font-weight",
             "line-height",
             "letter-spacing",
             "text-align",
             "color"
           ]
         },
         {
           "groupName": "Visual",
           "properties": [
             "background",
             "background-color",
             "box-shadow",
             "opacity"
           ]
         },
         {
           "groupName": "Animation",
           "properties": [
             "transition",
             "transform"
           ]
         },
         {
           "groupName": "Misc",
           "properties": [
             "cursor",
             "overflow",
             "visibility"
           ]
         }
       ]
    }
   }